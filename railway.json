{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "command": "./start_server.sh",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    },
    "environments": {
      "production": {
        "variables": {
          "RAILS_ENV": "production"
        }
      }
    }
  }